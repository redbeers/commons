<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stella.commons.image.mapper.ImageMapper">

    <resultMap id="imageMap" type="com.stella.commons.image.dto.ImageDTO">
        <id property="id" column="id"/>
        <result property="imageUrl" column="image_url"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insertImage" parameterType="com.stella.commons.image.dto.ImageDTO">
        INSERT INTO image (id, image_url, created_at)
        VALUES (#{id}, #{imageUrl}, #{createdAt})
    </insert>

    <update id="updateImage" parameterType="com.stella.commons.image.dto.ImageDTO">
        UPDATE image
        <set>
            image_url = #{imageUrl},
            created_at = #{createdAt},
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteImage" parameterType="com.stella.commons.image.dto.ImageDTO">
        DELETE FROM image WHERE id = #{id}
    </delete>

    <select id="selectImageTotCnt" resultType="int">
        SELECT COUNT(*) FROM image
        <where>
            <include refid="imageSql"/>
        </where>
    </select>

    <select id="selectImageList" resultMap="imageMap">
        SELECT id, image_url, created_at FROM image
        <where>
            <include refid="imageSql"/>
        </where>
    </select>

    <select id="selectImage" parameterType="com.stella.commons.image.dto.ImageDTO" resultMap="imageMap">
        SELECT id, image_url, created_at FROM image WHERE id = #{id}
    </select>

    <sql id="imageSql">
        <if test="id != null">
            AND id = #{id}
        </if>
    </sql>

</mapper>
